{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "val",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "val",
      "kebab-case"
    ],
    "variable-name": {
      "options": [
        "check-format",
        "allow-leading-underscore",
        "require-const-for-all-caps",
        "allow-pascal-case",
        "allow-snake-case"
      ]
    }
}
